<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.atv_o.atv_o.AtvoController">
    <children>
        <Label text="Digite a palavra em português:" layoutX="50" layoutY="50" />

        <TextField fx:id="inputWord" layoutX="50" layoutY="80" prefWidth="200" style="-fx-font-size: 18px;" />

        <Button fx:id="translateButton" text="Traduzir" layoutX="50" layoutY="120" style="-fx-font-size: 18px;" onAction="#Tradutor"/>

        <Label text="Tradução em inglês:" layoutX="50" layoutY="160" />

        <TextField fx:id="outputWord" layoutX="50" layoutY="190" prefWidth="200" style="-fx-font-size: 18px;" editable="false"/>
    </children>
</AnchorPane>
